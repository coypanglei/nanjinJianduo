<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/line_dropmenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f8f8f9"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_d2d2d2" />

    <LinearLayout
        android:id="@+id/select_data_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/ll_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="默认"
                android:textColor="@color/color_4a90e2"
                android:textSize="15dp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_new_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search_new_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新品"
                android:textColor="@color/color_4a4a4a"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/image_new_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_screening_default" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sales_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sales_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="销量"
                android:textColor="@color/color_4a4a4a"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/iv_sales_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_screening_default" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="价格"
                android:textColor="@color/color_4a4a4a"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/iv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_screening_default" />

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="15dp"
            android:id="@+id/view_line"
            android:background="@color/color_d2d2d2" />

        <LinearLayout
            android:id="@+id/ll_mode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_mode"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_mode_switch_lv" />
        </LinearLayout>


    </LinearLayout>



</LinearLayout>
