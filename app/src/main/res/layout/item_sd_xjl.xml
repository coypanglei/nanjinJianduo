<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView
            android:id="@+id/tv_xh"
            android:layout_width="40dp"
            android:layout_height="match_parent"

            android:gravity="center"
            tools:text="序号"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"

            />

        <TextView
            android:id="@+id/tv_khmc"
            android:layout_width="80dp"
            android:layout_height="match_parent"

            android:gravity="center"
            tools:text="客户名称"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11" />
        <TextView
            android:id="@+id/tv_zjhm"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:gravity="center"
            tools:text="证件号码"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11" />

        <TextView
            android:id="@+id/tv_zh"
            android:layout_width="120dp"
            android:layout_height="match_parent"

            android:gravity="center"
            tools:text="账号"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11" />


        <TextView
            android:id="@+id/tv_jylx"
            android:layout_width="80dp"
            android:layout_height="match_parent"

            android:gravity="center"
            tools:text="交易类型"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11" />

        <TextView
            android:id="@+id/tv_jyje"
            android:layout_width="100dp"
            android:layout_height="match_parent"


            android:gravity="center"

            tools:text="交易金额(元"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11" />

        <TextView
            android:id="@+id/tv_jyrq"
            android:layout_width="100dp"
            android:layout_height="match_parent"

            android:gravity="center"
            tools:text="交易日期"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11" />

        <TextView
            android:id="@+id/tv_jysj"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"

            tools:text="交易时间"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11" />


        <TextView
            android:id="@+id/tv_dfxm"
            android:layout_width="60dp"
            android:layout_height="match_parent"

            android:gravity="center"
            tools:text="对方姓名"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11" />

        <TextView
            android:id="@+id/tv_dfzh"
            android:layout_width="180dp"
            android:layout_height="match_parent"

            android:gravity="center"
            tools:text="对方账号"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11" />

        <TextView
            android:id="@+id/tv_bz"
            android:layout_width="120dp"
            android:layout_height="match_parent"

            android:gravity="center"
            tools:text="备注"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@id/ll_top" />
</android.support.constraint.ConstraintLayout>