<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="@color/white">

        <EditText
            android:id="@+id/et_name"
            style="@style/CenterInfoStyle"
            android:layout_width="150dp"
            android:layout_height="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="118dp"
            android:hint="企业名称或企业证件号"
            android:paddingRight="25dp"
            android:textColorHint="#868686" />

        <ImageView

            android:id="@+id/iv_clear"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:layout_alignRight="@id/et_name"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:background="@color/white"
            android:scaleType="center"
            android:src="@drawable/icon_edit_clear"

            />

        <com.libracore.lib.widget.StateButton
            android:id="@+id/sb_find"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/et_name"
            android:padding="@dimen/dp_1"
            android:text="查询"
            android:textSize="12dp"
            app:normalBackgroundColor="@color/color_23a7f0"
            app:normalTextColor="@color/white"
            app:pressedBackgroundColor="@color/color_48b2ed"
            app:pressedTextColor="@color/white"

            app:radius="2dp" />


        <com.libracore.lib.widget.StateButton
            android:id="@+id/sb_xzhy"
            android:layout_width="83dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/dp_16"

            android:paddingLeft="6dp"
            android:paddingTop="1dp"
            android:paddingRight="6dp"
            android:paddingBottom="1dp"
            android:text="选择行业"
            android:textSize="12dp"
            app:normalBackgroundColor="@color/color_ff9e4d"
            app:normalTextColor="@color/white"
            app:pressedBackgroundColor="@color/color_ff9e4d"
            app:pressedTextColor="@color/white"
            app:radius="2dp" />

        <com.libracore.lib.widget.StateButton
            android:id="@+id/sb_tianbao"
            android:layout_width="83dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_toLeftOf="@id/sb_xzhy"

            android:paddingLeft="6dp"
            android:paddingTop="1dp"
            android:paddingRight="6dp"
            android:paddingBottom="1dp"
            android:text="填报"
            android:textSize="12dp"
            app:normalBackgroundColor="@color/color_17c295"
            app:normalTextColor="@color/white"
            app:pressedBackgroundColor="@color/color_17c295"
            app:pressedTextColor="@color/white"
            app:radius="2dp" />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:drawableRight="@drawable/icon_more"
            android:drawablePadding="@dimen/dp_5"
            android:text="更多"
            android:textColor="@color/color_49a0ed"
            android:textSize="@dimen/dp_13"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/color_c0c0c0" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_9"
        android:background="@color/color_ebebeb" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_d4d4d4" />

    <com.shaoyue.weizhegou.widget.CustomHScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:background="@color/color_white"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/tv_xh"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:text="序号"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_11"

                    />

                <TextView
                    android:id="@+id/tv_qymc"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:text="企业名称"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_11" />

                <TextView
                    android:id="@+id/tv_qyzjhm"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:text="企业证件号码"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_11" />

                <TextView
                    android:id="@+id/tv_ghjl"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="管户经理"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_11" />
                <TextView
                    android:id="@+id/tv_jgmc"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="机构名称"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_11" />
                <TextView
                    android:id="@+id/tv_dkje"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:text="贷款金额"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_11" />

                <TextView
                    android:id="@+id/tv_dkye"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"

                    android:drawablePadding="@dimen/dp_3"
                    android:gravity="center"
                    android:paddingRight="@dimen/dp_10"
                    android:text="贷款余额"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_11" />

                <TextView
                    android:id="@+id/tv_qsrq"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:text="起始日期"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_11" />

                <TextView
                    android:id="@+id/tv_dbfs"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"


                    android:drawablePadding="@dimen/dp_3"
                    android:gravity="center"

                    android:text="担保方式"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_11" />


                <TextView
                    android:id="@+id/tv_dkyt"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:text="贷款用途"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_11" />

                <TextView
                    android:id="@+id/tv_khdz"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:gravity="center"

                    android:text="客户地址"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_11"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_frdb"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"

                    android:text="法人代表"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_11"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_frzjhm"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="法人证件号码"
                    android:visibility="gone"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_11" />

                <TextView
                    android:id="@+id/tv_lxfs"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="联系方式"
                    android:visibility="gone"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_11" />

                <TextView
                    android:id="@+id/tv_fxfl"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="风险分类"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_11" />

                <TextView
                    android:id="@+id/tv_sshy"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="所属行业"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_11" />

                <TextView
                    android:id="@+id/tv_zt"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="状态"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_11" />

                <TextView
                    android:id="@+id/tv_spnr"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="审批内容"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_11" />



            </LinearLayout>

            <include layout="@layout/empty_view" />

            <cn.bingoogolapple.refreshlayout.BGARefreshLayout
                android:id="@+id/refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f5f5f5">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_application"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </cn.bingoogolapple.refreshlayout.BGARefreshLayout>

        </LinearLayout>

    </com.shaoyue.weizhegou.widget.CustomHScrollView>


</LinearLayout>