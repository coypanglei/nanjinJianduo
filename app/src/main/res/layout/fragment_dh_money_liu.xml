<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f3f2f2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_dddddd" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_9"
                android:background="@color/color_f3f2f2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingBottom="20dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="金额（万元）"
                        android:textColor="@color/color_0d1730"
                        android:textSize="@dimen/dp_12" />

                    <TextView
                        android:id="@+id/tv_title_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_40"
                        android:drawableLeft="@drawable/icon_left_lv"
                        android:drawablePadding="@dimen/dp_4"
                        android:gravity="center_vertical"
                        android:text="近一年现金流流入"
                        android:textColor="@color/color_0d1730"
                        android:textSize="@dimen/dp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_40"
                        android:layout_toLeftOf="@id/tv_title_right"
                        android:drawableLeft="@drawable/icon_left_zei"
                        android:drawablePadding="@dimen/dp_4"
                        android:gravity="center_vertical"
                        android:text="近一年现金流流出"
                        android:textColor="@color/color_0d1730"
                        android:textSize="@dimen/dp_12" />

                </RelativeLayout>

                <view
                    android:id="@+id/line_view_float"
                    class="com.shaoyue.weizhegou.widget.lineTU.LineView"
                    android:layout_width="match_parent"
                    android:layout_height="247dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_9"
                android:background="@color/color_f3f2f2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30">

                <View
                    android:layout_width="2dp"
                    android:layout_height="14dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:background="@color/color_1e88e5" />

                <TextView
                    android:id="@+id/tv_my_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:text="近一年我行现金流入流出明细"
                    android:textColor="@color/color_23a7f0"
                    android:textSize="@dimen/dp_13" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_c0c0c0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:background="@color/color_f7f7f7"
                android:paddingLeft="120dp">

                <TextView
                    android:layout_width="50dp"


                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="1月"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="2月"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="3月"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="4月"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="5月"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="6月"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"

                    android:text="7月"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="8月"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="9月"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="10月"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="11月"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="12月"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="流入(万元）"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_12" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rl_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_d2d2d2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="流出(万元）"
                    android:textColor="@color/color_0d1730"
                    android:textSize="@dimen/dp_12" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rl_list_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/color_f3f2f2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_f3f2f2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"

                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30">

                        <View
                            android:layout_width="2dp"
                            android:layout_height="14dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:background="@color/color_1e88e5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="22dp"
                            android:drawablePadding="3dp"
                            android:gravity="center"
                            android:text="近一年我行实际现金流入流出总计"
                            android:textColor="@color/color_23a7f0"
                            android:textSize="@dimen/dp_13" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_c0c0c0" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="流入(万元)"
                            android:textColor="@color/color_17c295"
                            android:textSize="@dimen/dp_12" />

                        <TextView
                            android:id="@+id/tv_liuru"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/color_17c295"
                            android:textSize="@dimen/dp_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dp_15">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="流出(万元)"
                            android:textColor="@color/color_fe4646"
                            android:textSize="@dimen/dp_12" />

                        <TextView
                            android:id="@+id/tv_liucu"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/color_fe4646"
                            android:textSize="@dimen/dp_12" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30">

                        <View
                            android:layout_width="2dp"
                            android:layout_height="14dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:background="@color/color_1e88e5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="22dp"
                            android:drawablePadding="3dp"
                            android:gravity="center"
                            android:text="我行现金流描述"
                            android:textColor="@color/color_23a7f0"
                            android:textSize="@dimen/dp_13" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_c0c0c0" />

                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_85"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_15"
                        android:text="系统自动生成"
                        android:textColor="@color/color_0d1730"
                        android:textSize="@dimen/dp_12" />


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/color_f3f2f2" />

            <LinearLayout
                android:id="@+id/ll_ms"

                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <RelativeLayout

                    android:layout_width="520dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center">

                    <EditText
                        android:id="@+id/et_xjlfx"
                        style="@style/AddEditStyle"
                        android:layout_width="@dimen/dp_350"
                        android:layout_height="83dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="@dimen/dp_16"
                        android:gravity="left|top"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_12"
                        android:paddingBottom="@dimen/dp_5"
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:textColorHint="@color/color_666666" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/et_xjlfx"
                        android:drawableLeft="@drawable/icon_left_red"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_5"
                        android:text="现金流分析:"
                        android:textColor="@color/color_666666"
                        android:textSize="11dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="520dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10">

                    <EditText
                        android:id="@+id/et_thxjlms"
                        style="@style/AddEditStyle"
                        android:layout_width="@dimen/dp_350"
                        android:layout_height="83dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="@dimen/dp_16"
                        android:gravity="left|top"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_12"
                        android:paddingBottom="@dimen/dp_5"
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:textColorHint="@color/color_666666" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/et_thxjlms"
                        android:drawableLeft="@drawable/icon_left_red"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_5"
                        android:text="他行现金流描述:"
                        android:textColor="@color/color_666666"
                        android:textSize="11dp" />
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>