<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_goods_white" />

            <com.gcssloop.widget.RCRelativeLayout
                android:id="@+id/rc_rl_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="10dp"
                app:round_corner="5dp">

                <ImageView
                    android:id="@+id/iv_goods"
                    android:layout_width="101dp"
                    android:layout_height="101dp"
                    android:scaleType="fitXY"
                    android:gravity="center" />

            </com.gcssloop.widget.RCRelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@id/rc_rl_iv"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="@color/color_cd0946"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_price_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_cd0946"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_in_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_a4a4a4"
                    android:textSize="13dp"
                    tools:text="库存：7439件" />

                <TextView
                    android:id="@+id/tv_all_spec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:ellipsize="end"
                    android:lines="2"
                    android:textColor="@color/color_4a4a4a"
                    android:textSize="13dp"
                    tools:text="已选：红色带碎花连衣裙撒按时可见度喀什觉得喀什假大空啥的卡机ask的哈看似简单按时可见度哈撒可见度贺卡收到" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:scaleType="center"
                android:src="@drawable/icon_spec_close"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:background="@color/color_ededed" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_ededed" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:gravity="center_vertical">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4">

                    <com.gcssloop.widget.RCRelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/rcrel_iv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="4"
                        app:round_corner="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="39dp">

                            <TextView
                                android:id="@+id/tv_ok"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/icon_red_jbshape_no_corners"
                                android:gravity="center"
                                android:text="确定"
                                android:textColor="@color/white"
                                android:textSize="15dp" />

                            <LinearLayout
                                android:id="@+id/ll_buy"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/tv_add_to_shopping_cart"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/icon_blue_jbshape_no_corners_left"
                                    android:gravity="center"
                                    android:text="加入购物车"
                                    android:textColor="@color/white"
                                    android:textSize="15dp" />

                                <TextView
                                    android:id="@+id/tv_order"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/icon_red_jbshape_no_corners_left"
                                    android:gravity="center"
                                    android:text="立即购买"
                                    android:textColor="@color/white"
                                    android:textSize="15dp" />

                            </LinearLayout>

                        </RelativeLayout>

                    </com.gcssloop.widget.RCRelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_goods_spec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_ok"
            android:layout_below="@id/rl_title"
            android:background="@color/white" />


    </RelativeLayout>

    <View
        android:id="@+id/view_dismiss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom" />


</RelativeLayout>