<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f8f8f9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="11dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:text="收货人"
                android:textColor="@color/color_4a4a4a"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_my_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/iv_address_book"
                android:background="@null"
                android:hint="请填写您的真实姓名"
                android:textColor="@color/color_4a4a4a"
                android:textColorHint="@color/color_a4a4a4"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/iv_address_book"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@drawable/icon_address_book" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_ededed" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"

            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:text="手机号码"
                android:textColor="@color/color_4a4a4a"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_my_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:hint="请填写您的手机号"
                android:inputType="phone"
                android:singleLine="true"
                android:textColor="@color/color_4a4a4a"
                android:textColorHint="@color/color_a4a4a4"
                android:textSize="13dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_ededed" />

        <RelativeLayout
            android:id="@+id/rl_select_area"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/icon_right_go" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="所在地区"
                android:textColor="@color/color_4a4a4a"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="53dp"
                android:background="@null"
                android:hint="选择你所在的地区、城市、辖区/县区"
                android:textColor="@color/color_a4a4a4"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_area_have"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="15dp"
                android:lineSpacingExtra="10dp"
                android:textColor="@color/color_4a4a4a"
                android:textSize="14dp"
                android:visibility="invisible" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_ededed" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="详细地址"
                android:textColor="@color/color_4a4a4a"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_detailed_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="33dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:hint="如道路、门牌号、小区、楼栋号、单元室等"
                android:singleLine="true"
                android:textColor="@color/color_4a4a4a"
                android:textColorHint="@color/color_a4a4a4"
                android:textSize="13dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_ededed" />

        <RelativeLayout
            android:id="@+id/rl_set_default"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="设为默认地址"
                android:textColor="@color/color_4a4a4a"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/iv_is_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_select_cancel" />

        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_save_address"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/icon_blue_jbshape"
        android:gravity="center"
        android:text="保存地址"
        android:textColor="@color/white"
        android:textSize="16dp" />

</LinearLayout>