<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_three_menu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="100dp"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="25dp"
        android:drawableLeft="@drawable/icon_menu_details"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:text="查看详情"
        android:textColor="@color/color_white"
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_bg"
        app:layout_constraintTop_toTopOf="@id/iv_bg" />


    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="100dp"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/icon_menu_progress"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:text="查看进度"
        android:textColor="@color/color_white"
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_bg"
        app:layout_constraintTop_toBottomOf="@id/tv_detail" />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="100dp"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/icon_menu_back"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:text="取消认领"
        android:textColor="@color/color_white"
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_bg"
        app:layout_constraintTop_toBottomOf="@id/tv_progress" />

</android.support.constraint.ConstraintLayout>