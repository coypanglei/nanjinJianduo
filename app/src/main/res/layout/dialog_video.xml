<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_12">

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:layout_marginTop="20dp"
        android:background="@color/black">

        <com.youth.banner.Banner xmlns:app="http://schemas.android.com/apk/res-auto"
                                 android:id="@+id/goods_banner"
                                 android:layout_width="match_parent"
                                 android:layout_height="400dp"
                                 app:banner_layout="@layout/banner_custom_viewpager"
                                 app:delay_time="2000"
                                 app:image_scale_type="fit_center"
                                 app:is_auto_play="false"
                                 app:scroll_time="1000"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:paddingRight="20dp"
            android:scaleType="center"
            android:src="@drawable/dialog_line_close"
            />
        <View
            android:layout_width="2dp"
            android:layout_height="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/color_white"/>

        <TextView
            android:id="@+id/tv_my_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/dp_18"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_13"
            />

        <ImageView
            android:id="@+id/iv_detele"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:src="@drawable/icon_detele"
            />
    </RelativeLayout>

</RelativeLayout>


