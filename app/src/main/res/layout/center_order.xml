<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/speed_button_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_all_order"
        android:layout_width="match_parent"
        android:layout_height="27dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:text="全部订单"
            android:textColor="@color/color_4a4a4a"
            android:textSize="13dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/icon_right_go" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_dash_line"
        android:layerType="software" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_pending_pay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_pending_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/icon_pending"
                android:drawablePadding="5dp"
                android:text="待付款"
                android:textColor="@color/color_4a4a4a"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_unpaid_count"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignRight="@id/tv_pending_pay"
                android:background="@drawable/icon_num_yuan_bg"
                android:gravity="center"
                android:text="99+"
                android:visibility="invisible"
                android:textColor="@color/color_f20000"
                android:textSize="7dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_pending_waiting_for_goods"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_pending_waiting_for_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/icon_waiting_for_goods"
                android:drawablePadding="8dp"
                android:text="待发货"
                android:textColor="@color/color_4a4a4a"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_not_shipped_count"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignRight="@id/tv_pending_waiting_for_goods"
                android:background="@drawable/icon_num_yuan_bg"
                android:gravity="center"
                android:text="99+"
                android:visibility="invisible"
                android:textColor="@color/color_f20000"
                android:textSize="7dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_pending_receipt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_wait_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/icon_pending_receipt"
                android:drawablePadding="5dp"
                android:text="待收货"
                android:textColor="@color/color_4a4a4a"
                android:textSize="13dp"

                />

            <TextView
                android:id="@+id/tv_unreceived_count"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignRight="@id/tv_wait_goods"
                android:background="@drawable/icon_num_yuan_bg"
                android:gravity="center"
                android:text="99+"
                android:visibility="invisible"
                android:textColor="@color/color_f20000"
                android:textSize="7dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_return"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_return_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/icon_return_goods"
                android:drawablePadding="5dp"
                android:text="退换货"
                android:textColor="@color/color_4a4a4a"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_return_count"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignRight="@id/tv_return_goods"
                android:background="@drawable/icon_num_yuan_bg"
                android:gravity="center"
                android:text="99+"
                android:visibility="invisible"
                android:textColor="@color/color_f20000"
                android:textSize="7dp" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
