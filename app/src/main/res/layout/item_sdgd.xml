<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/tv_xh"
            android:layout_width="40dp"
            android:layout_height="match_parent"

            android:gravity="center"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            tools:text="序号"

            />

        <TextView
            android:id="@+id/tv_khmc"
            android:layout_width="80dp"
            android:layout_height="match_parent"

            android:gravity="center"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            tools:text="客户名称" />

        <TextView
            android:id="@+id/tv_zjhm"
            android:layout_width="120dp"
            android:layout_height="match_parent"

            android:gravity="center"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            tools:text="证件号码" />


        <TextView
            android:id="@+id/tv_dkje"
            android:layout_width="80dp"
            android:layout_height="match_parent"

            android:gravity="center"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            tools:text="贷款金额" />

        <TextView
            android:id="@+id/tv_dkye"
            android:layout_width="60dp"
            android:layout_height="match_parent"

            android:drawablePadding="@dimen/dp_3"
            android:gravity="center"
            android:paddingRight="@dimen/dp_10"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            tools:text="贷款余额" />

        <TextView
            android:id="@+id/tv_qsrq"
            android:layout_width="60dp"
            android:layout_height="match_parent"

            android:gravity="center"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            tools:text="起始日期" />

        <TextView
            android:id="@+id/tv_dbfs"
            android:layout_width="60dp"
            android:layout_height="match_parent"


            android:drawablePadding="@dimen/dp_3"
            android:gravity="center"

            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            tools:text="担保方式" />


        <TextView
            android:id="@+id/tv_dkyt"
            android:layout_width="60dp"
            android:layout_height="match_parent"

            android:gravity="center"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            tools:text="贷款用途" />

        <TextView
            android:id="@+id/tv_khdz"
            android:layout_width="180dp"
            android:layout_height="match_parent"

            android:gravity="center"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            tools:text="客户地址" />

        <TextView
            android:id="@+id/tv_lxfs"
            android:layout_width="120dp"
            android:layout_height="match_parent"

            android:gravity="center"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            tools:text="联系方式" />

        <TextView
            android:id="@+id/tv_fxfl"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            tools:text="风险分类" />

        <TextView
            android:id="@+id/tv_bqsfcxyqqx"
            android:layout_width="@dimen/dp_120"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            android:visibility="gone"
            tools:text="本期是否出现逾期欠息" />

        <TextView
            android:id="@+id/tv_sfbl"
            android:layout_width="@dimen/dp_250"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            tools:text="借款人在本行对外担保贷款是否出现逾期或者不良" />
        <TextView
            android:id="@+id/tv_zt"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            tools:text="状态" />
        <TextView
            android:id="@+id/tv_spnr"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            tools:text="审批内容" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@id/ll_top" />
</android.support.constraint.ConstraintLayout>