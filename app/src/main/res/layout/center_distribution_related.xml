<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/speed_button_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="27dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:text="分销相关"
            android:textColor="@color/color_4a4a4a"
            android:textSize="13dp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_dash_line"
        android:layerType="software" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_pending_waiting_for_distribution_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/icon_distribution_products"
                android:text="分销产品"
                android:textColor="@color/color_4a4a4a"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_productCount_num"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignRight="@id/tv_pending_waiting_for_distribution_products"
                android:background="@drawable/icon_num_yuan_bg"
                android:gravity="center"

                android:textColor="@color/color_f20000"
                android:textSize="7dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_pending_waiting_for_distributor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/icon_distributor"
                android:text="分销商"
                android:textColor="@color/color_4a4a4a"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_sonSaleCount_num"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignRight="@id/tv_pending_waiting_for_distributor"
                android:background="@drawable/icon_num_yuan_bg"
                android:gravity="center"

                android:textColor="@color/color_f20000"
                android:textSize="7dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_sonUserCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/icon_member"
                android:gravity="center"
                android:text="会员"
                android:textColor="@color/color_4a4a4a"
                android:textSize="13dp"

                />

            <TextView
                android:id="@+id/tv_sonUserCount_num"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignRight="@id/tv_sonUserCount"
                android:background="@drawable/icon_num_yuan_bg"
                android:gravity="center"

                android:textColor="@color/color_f20000"
                android:textSize="7dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_orderCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/icon_member_order"
                android:text="分销订单"
                android:textColor="@color/color_4a4a4a"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_orderCount_num"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignRight="@id/tv_orderCount"
                android:background="@drawable/icon_num_yuan_bg"
                android:gravity="center"
                android:textColor="@color/color_f20000"
                android:textSize="7dp" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
