<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/speed_button_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_go_commission_details"
                android:layout_width="match_parent"
                android:layout_height="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:text="佣金收入详情"
                    android:textColor="@color/color_4a4a4a"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="13dp"
                    android:background="@drawable/icon_right_go" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_dash_line"
                android:layerType="software" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:orientation="horizontal"
                android:paddingLeft="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="佣金余额:"
                    android:textColor="@color/color_4a4a4a"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_commission_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0.00元"
                    android:textColor="@color/color_cd0946"
                    android:textSize="13dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_revenue_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="14dp"
                android:text="待收益：0元"
                android:textColor="@color/color_a4a4a4"
                android:textSize="11dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_withdraw"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="49dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/icon_red_jbshape_20"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"

            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="提现"
            android:textColor="@color/white"
            android:textSize="12dp"

            />

    </RelativeLayout>
</LinearLayout>