<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_3f3f3f"
            android:textSize="@dimen/dp_26"
            android:textStyle="bold"
            tools:text="15996937413"/>

        <TextView
            android:id="@+id/tv_error_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/color_ff0000"
            android:textSize="@dimen/dp_12"
            tools:text="两次输入密码不正确"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/et_old"
                style="@style/EditPasswordStyle"
                android:layout_width="415dp"
                android:layout_height="50dp"
                android:hint="请输入上次登录密码"
                android:inputType="textPassword"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/et_new_pass"
                style="@style/EditPasswordStyle"
                android:layout_width="415dp"
                android:layout_height="50dp"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/et_ok_pass"
                style="@style/EditPasswordStyle"
                android:layout_width="415dp"
                android:layout_height="50dp"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                />

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="76dp"
                android:layout_height="48dp"
                android:layout_alignRight="@id/et_ok_pass"
                android:layout_centerVertical="true"
                android:layout_margin="1dp"
                android:background="@drawable/bg_edit_btn"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_17"/>
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>