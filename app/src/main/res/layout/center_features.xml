<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_center_features"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/speed_button_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="27dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:text="常用功能"
            android:textColor="@color/color_4a4a4a"
            android:textSize="13dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_dash_line"
        android:layerType="software" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_red_envelope"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_voucher"
                android:gravity="center"

                android:paddingBottom="10dp"
                android:text="红包礼卷"
                android:textColor="@color/color_4a4a4a"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_account_security"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_center_account_safe"
                android:gravity="center"

                android:paddingBottom="10dp"
                android:text="账户安全"
                android:textColor="@color/color_4a4a4a"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_wallet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_center_money"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="我的钱包"
                android:textColor="@color/color_4a4a4a"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_integral"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_integral"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:text="我的积分"
                android:textColor="@color/color_4a4a4a"
                android:textSize="13dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_member_benefits"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_member_benefits"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="会员权益"
                android:textColor="@color/color_4a4a4a"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_recharge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_center_recharge"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="账户充值"
                android:textColor="@color/color_4a4a4a"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_modify_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_center_modify_data"
                android:gravity="center"

                android:paddingBottom="10dp"
                android:text="修改资料"
                android:textColor="@color/color_4a4a4a"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_go_address_management"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_center_address_management"
                android:gravity="center"

                android:paddingBottom="10dp"
                android:text="地址管理"
                android:textColor="@color/color_4a4a4a"
                android:textSize="13dp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>