<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        >

        <EditText
            android:id="@+id/et_name"
            style="@style/CenterInfoStyle"
            android:layout_width="145dp"
            android:paddingRight="25dp"
            android:layout_height="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="118dp"
            android:hint="客户姓名或身份证号"
            android:textColorHint="#868686"
            />

        <ImageView

            android:id="@+id/iv_clear"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:layout_marginRight="1dp"
            android:background="@color/white"
            android:layout_alignRight="@id/et_name"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@drawable/icon_edit_clear"

            />

        <com.libracore.lib.widget.StateButton
            android:id="@+id/sb_find"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/et_name"
            android:padding="@dimen/dp_1"
            android:text="查询"
            android:textSize="12dp"
            app:normalBackgroundColor="@color/color_23a7f0"
            app:normalTextColor="@color/white"
            app:pressedBackgroundColor="@color/color_48b2ed"
            app:pressedTextColor="@color/white"

            app:radius="2dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_48"
            android:layout_toRightOf="@id/sb_find">

            <com.libracore.lib.widget.StateButton
                android:id="@+id/sb_application"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/icon_add_new"
                android:gravity="end|center_vertical"
                android:paddingLeft="4dp"
                android:paddingTop="1dp"
                android:paddingRight="6dp"
                android:paddingBottom="1dp"
                android:text="申请"
                android:textSize="12dp"
                app:normalBackgroundColor="@color/color_17c295"

                app:normalTextColor="@color/white"
                app:pressedBackgroundColor="@color/color_35d9ae"

                app:pressedTextColor="@color/white"
                app:radius="2dp"/>

            <com.libracore.lib.widget.StateButton
                android:id="@+id/sb_edit"
                android:layout_width="83dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:drawableLeft="@drawable/icon_edit_but"
                android:paddingLeft="6dp"
                android:paddingTop="1dp"
                android:paddingRight="6dp"
                android:paddingBottom="1dp"
                android:text="修改申请"
                android:textSize="12dp"
                app:normalBackgroundColor="@color/white"
                app:normalStrokeColor="@color/color_49a0ed"
                app:normalStrokeWidth="1dp"
                app:normalTextColor="@color/color_49a0ed"
                app:pressedBackgroundColor="@color/white"
                app:pressedStrokeColor="@color/color_49a0ed"
                app:pressedStrokeWidth="1dp"
                app:pressedTextColor="@color/color_49a0ed"
                app:radius="2dp"/>

            <com.libracore.lib.widget.StateButton
                android:id="@+id/sb_cancel"
                android:layout_width="83dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="12dp"
                android:drawableLeft="@drawable/icon_cancel_application"
                android:paddingLeft="6dp"
                android:paddingTop="1dp"
                android:paddingRight="6dp"
                android:paddingBottom="1dp"
                android:text="取消申请"
                android:textSize="12dp"
                app:normalBackgroundColor="@color/color_fe4646"
                app:normalTextColor="@color/white"
                app:pressedBackgroundColor="@color/color_fb5959"
                app:pressedTextColor="@color/white"
                app:radius="2dp"/>

            <com.libracore.lib.widget.StateButton
                android:id="@+id/sb_synchronize"
                android:visibility="visible"
                android:layout_width="83dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/icon_synchronize"
                android:paddingLeft="6dp"
                android:paddingTop="1dp"
                android:paddingRight="6dp"
                android:paddingBottom="1dp"
                android:text="手动同步"
                android:textSize="12dp"
                app:normalBackgroundColor="@color/color_23a7f0"
                app:normalTextColor="@color/white"
                app:pressedBackgroundColor="@color/color_48b2ed"
                app:pressedTextColor="@color/white"
                app:radius="2dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:drawableRight="@drawable/icon_more"
            android:drawablePadding="@dimen/dp_5"
            android:text="更多"
            android:textColor="@color/color_49a0ed"
            android:textSize="@dimen/dp_13"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/color_c0c0c0"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_9"
        android:background="@color/color_ebebeb"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_d4d4d4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:background="@color/color_f7f7f7"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="序号"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:text="身份证号"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="客户姓名"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="申请授信(万元)"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            />

        <TextView
            android:layout_width="0dp"
            android:id="@+id/tv_status"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:drawableRight="@drawable/icon_go_bottom"
            android:drawablePadding="@dimen/dp_3"
            android:gravity="center|right"
            android:paddingRight="@dimen/dp_6"
            android:text="流程状态"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="当前环节"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="授信机构"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="授信经理"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="受理日期"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="受理人"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="3"
            android:gravity="center"
            android:text="同步结果"
            android:textColor="@color/color_0d1730"
            android:textSize="@dimen/dp_11"
            />
    </LinearLayout>
    <include layout="@layout/empty_view"/>
    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5f5f5"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_application"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>

</LinearLayout>